<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_5">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        app:cardCornerRadius="@dimen/dp_5">

        <ImageView
            android:id="@+id/iv_lottery_analysis2_item_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_paimeng" />

        <FrameLayout
            android:id="@+id/fl_lottery_analysis2_item_type"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="end|bottom"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="-3dp"
                android:layout_marginBottom="-3dp"
                android:src="@mipmap/icon_triangle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginStart="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_1"
                android:text="限"
                android:textColor="@color/color_fortune_1"
                android:textSize="@dimen/sp_6" />
        </FrameLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_lottery_analysis2_item_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_8"
        tools:text="神里绫华(15)" />

</LinearLayout>