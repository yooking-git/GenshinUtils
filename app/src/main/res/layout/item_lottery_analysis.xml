<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_2"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <cn.yooking.genshin.widget.echarts.view.EChartsView
        android:id="@+id/ecv_lottery_analysis_echarts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230"
        android:layerType="hardware"
        android:background="@color/color_white" />

    <TextView
        android:id="@+id/tv_lottery_analysis_stars5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="@color/color_stars5"
        android:textSize="@dimen/sp_15"
        tools:text="5星100次(100%)" />

    <TextView
        android:id="@+id/tv_lottery_analysis_stars4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="@color/color_stars4"
        android:textSize="@dimen/sp_15"
        tools:text="4星0次(0%)" />

    <TextView
        android:id="@+id/tv_lottery_analysis_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_15"
        tools:text="保底累计：0抽" />

</LinearLayout>