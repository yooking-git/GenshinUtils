<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tv_record_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="cv_analysis2_item">
        <item name="cardCornerRadius">@dimen/dp_8</item>
        <item name="cardBackgroundColor">@color/color_white</item>
        <item name="cardElevation">@dimen/dp_4</item>
        <item name="contentPadding">@dimen/dp_10</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
    </style>

</resources>
